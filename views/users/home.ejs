 <% include('../layouts/header.ejs') %>
<style>
    body {
        background-color: #f3f3f3;
        color: #333;
        font-family: Arial, sans-serif;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    h3 {
        color: #007bff;
        margin-top: 0; /* Remove default margin */
    }

    table {
        width: 50%;
        margin-top: 20px;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    td img {
        width: 100px;
        height: 125px;
        border-radius: 8px;
    }

    td {
        padding: 10px;
        border-bottom: 1px solid #ccc;
    }

    a {
        color: #007bff;
        text-decoration: none;
        margin-top: 10px;
        display: block;
    }

    a:hover {
        text-decoration: underline;
    }
</style>


<h3>Welcome, <%= user.name %> </h3>

<table>
    <tr>
        <td><img src="userImages/<%= user.image %>" alt="<%= user.image %>"></td>
    </tr>
    <tr>
        <td>Email:</td>
        <td><%= user.email %></td>
    </tr>
    <tr>
        <td>Mobile:</td>
        <td><%= user.mobile %></td>
    </tr>
   
  
</table>

<a href="/edit?id=<%= user._id %>">Edit Profile</a>
<a href="/logout">Logout</a>

    
<% include('../layouts/footer.ejs') %>
